{
  "ApiRoutes": [
    {
      "Path": "/api/payments/create",
      "Method": "POST",
      "Auth": "jwt",
      "Handler": "Axion.API.Handlers.CreatePaymentHandler, Axion.API",
      "RequestSchema": {
        "Fields": [
        ]
      }
    },
    {
      "Path": "/api/payments/refund",
      "Method": "POST",
      "Auth": "none",
      "Handler": "Axion.API.Handlers.RefundPaymentHandler, Axion.API",
      "RequestSchema": {
        "Fields": [
          {
            "Name": "amount",
            "Type": "decimal",
            "Required": true,
            "Min": 0.01,
            "Max": 100000
          },
          {
            "Name": "currency",
            "Type": "string",
            "Required": true,
            "AllowedValues": [
              "USD",
              "EUR",
              "UAH"
            ]
          },
          {
            "Name": "merchant_name",
            "Type": "string",
            "Required": true,
            "RegExp": "[A-Za-z0-9_@,-./+!]{4,}"
          },
          {
            "Name": "order_id",
            "Type": "string",
            "Required": true,
            "RegExp": "[0-9A-Za-z\\_]{5,}"
          },
          {
            "Name": "card_number",
            "Type": "card_number",
            "Required": true
          },
          {
            "Name": "description",
            "Type": "string",
            "Required": false,
            "MaxLength": 256
          }
        ]
      }
    }
  ]
}